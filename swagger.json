{
  "openapi": "3.0.0",
  "info": {
    "title": "TXKABIR - TUDKABIR Integration API (MVP)",
    "version": "1.0.0",
    "description": "API to fetch available transport options from TX KABIR for TUDKABIR."
  },
  "paths": {
    "/api/drivers": {
      "get": {
        "summary": "List available drivers",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "A list of drivers"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}